<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="5dp"
    android:background="@drawable/gpt_bg_property_card">

    <!-- Property Card -->
    <LinearLayout
        android:id="@+id/roomsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:layout_marginVertical="4dp"
        tools:ignore="UselessParent">

        <!-- Top Row: Room 01 + Status + Rent Amount -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="0dp">

            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_room_01"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvRoomName"
                android:text="Vacant"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/gpt_bg_chip"
                android:textColor="@color/grey_700"/>
            <TextView
                android:id="@+id/tvRupeeSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_rupee_symbol"
                android:textSize="21sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@id/tvRoomRent"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvRoomRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_rent_2500"
                android:textSize="22sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <!-- Name -->
            <TextView
                android:id="@+id/tvTenantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_tenant_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <!-- Paid/Unpaid Status -->
            <TextView
                android:id="@+id/tvRentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_status_paid"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <View
            android:id="@+id/viewSeparatorLine"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/light_separator"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerContainer"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- First: Bill Name -->
            <TextView
                android:id="@+id/tvBillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_electricity_bill"
                android:textSize="16sp"
                android:textColor="@color/grey_700"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Center: Units + "units" together -->
            <LinearLayout
                android:id="@+id/centerGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tvUnitPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvUnitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" units"
                    android:textSize="16sp"
                    android:textColor="@color/grey_700" />
            </LinearLayout>
            <!-- Third: Status -->
            <TextView
                android:id="@+id/tvEBillStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/gpt_bg_status_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />



        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>