<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetailsActivity">

    <!-- Top Background Section -->
    <LinearLayout
        android:id="@+id/propertyHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Property Name -->
        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_property_name"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvPropertyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/text_address_city"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Stats Row -->
    <LinearLayout
        android:id="@+id/analyticsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/propertyHeaderLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_analytic_layout_pd"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:elevation="6dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:id="@+id/tvTotalRentCollected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹75,000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earnings"
                android:textSize="14sp"
                android:layout_marginTop="-8dp"
                android:textColor="#666666"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:lines="2"
                android:gravity="center"
                android:breakStrategy="simple"/>
        </LinearLayout>

        <!-- Card 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_analytic_layout_pd"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:elevation="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/text_vacupied_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Due"
                android:layout_marginTop="-8dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:lines="2"
                android:gravity="center"
                android:breakStrategy="simple"/>
        </LinearLayout>

        <!-- Card 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_analytic_layout_pd"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:elevation="6dp"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/text_current_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bills Pending"
                android:textSize="14sp"
                android:layout_marginTop="-8dp"
                android:textColor="#666666"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:lines="2"
                android:gravity="center"
                android:breakStrategy="simple"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/purple_700"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analyticsLayout"/>

    <LinearLayout
        android:id="@+id/roomsShopsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparatorLine">

        <!-- Title -->
        <TextView
            android:id="@+id/titleRoomsShops"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rooms / Shops List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Add Room Button -->
        <TextView
            android:id="@+id/btnAddRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="+ Add Room"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/gpt_bg_chip"
            android:gravity="center" />

        <!-- Add Shop Button -->
        <TextView
            android:id="@+id/btnAddShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="+ Add Shop"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/gpt_bg_chip"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/viewSeparatorLine2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/purple_700"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomsShopsHeader"/>

    <!-- RecyclerView below the header -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewSeparatorLine2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>