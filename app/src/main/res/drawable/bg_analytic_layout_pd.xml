<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:left="2dp"
        android:right="-2dp"> <!-- Shift shadow right -->
        <shape android:shape="rectangle">
            <solid android:color="#33282828"/> <!-- Semi-transparent shadow color -->
            <corners android:radius="14dp"/>   <!-- Slightly bigger than main -->
        </shape>
    </item>

    <!-- Foreground white card with border -->
    <item android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/bg_orange"/>
        </shape>
    </item>
</layer-list>
